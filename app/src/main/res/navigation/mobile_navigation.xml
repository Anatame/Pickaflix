<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.anatame.pickaflix.presentation.Fragments.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_movieDetailFragment"
            app:destination="@id/navigation_detail"
            app:launchSingleTop="false"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_navigation_home_to_searchFragment"
            app:destination="@id/navigation_search"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/navigation_saved"
        android:name="com.anatame.pickaflix.presentation.Fragments.Saved.SavedMoviesFragment"
        android:label="Saved"
        tools:layout="@layout/fragment_saved" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.anatame.pickaflix.presentation.Fragments.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />


    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.anatame.pickaflix.presentation.Fragments.Detail.MovieDetailFragment"
        android:label="movie_detail_fragment"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movie"
            app:argType="com.anatame.pickaflix.data.remote.PageParser.Home.DTO.MovieItem"
            app:nullable="true" />
        <argument
            android:name="imageID"
            app:argType="string"
            app:nullable="true" />
        <argument android:name="searchMovieItem"
            app:argType="com.anatame.pickaflix.data.remote.PageParser.Home.DTO.SearchMovieItem"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.anatame.pickaflix.presentation.Fragments.Search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_navigation_detail"
            app:destination="@id/navigation_detail" />
    </fragment>
</navigation>